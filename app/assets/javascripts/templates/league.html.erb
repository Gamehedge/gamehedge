                  <div class="col-xs-3 col-md-2 score">
                    <table>
                      <thead>
                        <tr>
                          <th>
                            W
                          </th>
                          <th>
                            L
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                            {{performer.wins}}<span ng-show="performer.wins == '' || performer.wins == null">-</span>
                          </td>
                          <td>
                            {{performer.losses}}<span ng-show="performer.losses == '' || performer.wins == null">-</span>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div ng-show="league.id == 5" class="col-md-6 text-center main-division-container">
          <div class="small-division" ng-repeat="division in divisions_last | filter:{'is_main_division' : 'true', 'division_id' : main_division.id}">
            {{division.name | uppercase}} TICKETS
