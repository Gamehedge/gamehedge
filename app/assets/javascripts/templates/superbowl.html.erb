<section id="home">
    <section id="hero">
        <div id="shader"></div>
        <div id="wrapper">
          <div id="content">
            <div class="container">
              <p class="hidden-md hidden-lg hidden-xl">Every Ticket Comes With Our Good Game Guarantee!</p>
              <div id="hero-search">
                <form id="form-home-search" name="formSearch" onsubmit="function(){return false;};">
                  <input type="hidden" name="type" value="full" />
                  <div class="form-group">
                    <img src="<%= image_url "search icon.png" %>" ng-click="goToSearch()">
                    <input id="search_element" type="text" class="form-control" placeholder="Search by team, league, game, stadium or player..." ng-model="searchTerm" uib-typeahead="hint as hint.name for hint in getSearchHints($viewValue)" typeahead-template-url="typeahead/bind-node.html" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" typeahead-on-select="onSelect($item, $model, $label)" typeahead-no-results="noResults">
                     <div class="no-results" ng-show="noResults && searchTerm != ''">
                      No results. Please try again
                    </div>
                  </div>
                </form>
              </div>
              
            </div>
            <div class="press-images hidden-xs hidden-sm">
              <div class="container">
                <div class="spacing-div">AS FEATURED IN</div>
                <div class="spacing-div"><img src="<%= image_url "press2/CNBC copy.png" %>"></div>
                <div class="spacing-div"><img src="<%= image_url "press2/USA Today copy.png" %>"></div>
                <div class="spacing-div"><img src="<%= image_url "press2/Sports Illustrated Red.png" %>"></div>
                <div class="spacing-div"><img src="<%= image_url "press2/Yahoo Finance.png" %>"></div>
                <div class="spacing-div"><img src="<%= image_url "press2/ESPN Radio copy.png" %>"></div>
              </div>
            </div>
          </div>
        </div>
    </section>
    
    <main id="page_container">
        <section id="good-game-guarantee" class="hidden-xs hidden-sm">
          <div class="container">
           


<div class="top-banner">
      <div class="ggg-blogo"><span>Good Game Guarantee</span></div>
      <div class="logo-left">
        <div class="b-title"><span class="b-perc">50%</span> Refund</div>
        <div class="b-sub"><span>If <b>either team</b> loses by </span><b>28 points</b> or more</div>
      </div>
      <div class="logo-right">
        <div class="b-sm-left">
              <img src="<%= image_url "icon coin.png" %>">
        </div>
        <div class="b-sm-right">
          <div class="hl-text">Buy Tickets</div>
          <div class="hl-text">Claim Money</div>
          <div>No gimmicks</div>
          <div>No catches</div>
          <div id='ggg_explanation' style="line-height: 13px; font-size: 11px; color: #226ea5;">More <i class="fa fa-angle-double-right" aria-hidden="true"></i></div>


                  <div class="ggg-tooltip" style="display: none;" id="ggg-tooltip">
										<ul class="qtip_ul1">
										<li>Buy your tickets</li>
										<li>If <b>either team</b> loses by</li>
											<ul class="qtip_ul2">
												<li>28 points or more</li>
											</ul>
                    <li>Click on Claim Refund</li>  
										<li>We will refund to your credit card in 3-4 days</li>

										</ul>
									</div>
	                <script>
									jQuery( document ).ready(function() {
										
    									jQuery("#ggg_explanation").qtip({											
         									hide: {												 
             								    fixed: true,
                								delay: 300
            								},
											
										      position: {
        									  	my: 'right center', 
        										  at: 'left center', 
        										  target: jQuery('#ggg_explanation')
    										  },	
											    style: {
     										     classes: 'qtip-light qtip-shadow qtip-checkout'
    										  },										
        									content: {
											      	title: 'How Good Game Guarantee works',
            									text: jQuery("#ggg-tooltip")
        									},
    											events: {
       										   show: function(event, api) {
            										mixpanel.track("GGG Tooltip Pops");
        										}
    	  									}

    									
										});
										
									})
									</script>

        </div>
        <div class="sep"></div>        
      </div>
      <div class="sep"></div>



          </div>
        </section>
<center>        
<h2>Super Bowl</h2>
<br/>

</center>

        
        <div id="how-works-bottom" class="container">
            
            <hr>
            
            <div class="guarantee row">
                <div class="col-sm-2 col-xs-3 how-works-mobile"><img width="100%" src="<%= image_url 'badge-gamehedge.png' %>" /></div>
                <div class="col-sm-10 col-xs-9">
                    <h2>Good Game Guarantee&trade;</h2>
                    <p>All GameHedge tickets come with our exclusive Good Game Guarantee at no additional cost to you. So, if the home team loses by 5 runs or more, we will refund 50% of the ticket price. No gimmicks. No catches.</p>
                </div>
            </div>
        </div>
        
    </main>
</section>